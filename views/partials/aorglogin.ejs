</head>

<body>
    <div class="wrapper">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3 id="Admin">MVP</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/project">Projects</a>
                </li>
                <li>
                    <a href="/organizationusers">Users</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content Holder -->
        <div id="content">

            <%- include('adheader') %>
                <div id="loader" style="display: none;"><img src="loader.gif" /></div>
                <div class="card" id="repotablecard">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-lg-6">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="text-center pull-left" id="url">
                                    Projects
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-lg-6">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                <button class="text-center btn btn-primary pull-right" id="create">
                                    Create Project
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="col-md-12 col-sm-12 col-lg-12">
                            <div id="repotable" style="border: 2px solid white;">
                                <table class="display responsive text-center table-bordered" cellspacing="0"
                                    style="width:100%;" id="repotbl">
                                    <thead class="thead-dark bg-color">
                                        <tr class="text-center" style="color:white;background-color:blue;">
                                            <th scope="col">id</th>
                                            <th scope="col">Project Name</th>
                                            <th scope="col">Created By</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                </div>
                <div class="card" id="editorcard" style="display: none;">
                    <div class="row">
                        <div class="col-md-3 filecontainer">
                            <div id="file" class="demo"></div>
                        </div>
                        <div class="col-md-9">
                            <div class="container-fluid editor" id="editor"></div>
                        </div>
                    </div>
                </div>
                <div class="card" id="assigntablecard" style="display: none;">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-lg-6">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="text-center pull-left" id="url">
                                    Unassigned
                                </div>
                                <div class="card-body">
                                    <div class="col-md-12 col-sm-12 col-lg-12">
                                        <div id="repounasstable" style="border: 2px solid white;">
                                            <table class="display responsive text-center table-bordered" cellspacing="0"
                                                style="width:100%;" id="repounasstbl">
                                                <thead class="thead-dark bg-color">
                                                    <tr class="text-center" style="color:white;background-color:blue;">
                                                        <th scope="col">id</th>
                                                        <th scope="col">Name</th>
                                                        <th scope="col">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-lg-6">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="text-center pull-left" id="url">
                                    Assigned
                                </div>
                                <div class="card-body">
                                    <div class="col-md-12 col-sm-12 col-lg-12">
                                        <div id="repoasstable" style="border: 2px solid white;">
                                            <table class="display responsive text-center table-bordered" cellspacing="0"
                                                style="width:100%;" id="repoasstbl">
                                                <thead class="thead-dark bg-color">
                                                    <tr class="text-center" style="color:white;background-color:blue;">
                                                        <th scope="col">id</th>
                                                        <th scope="col">Name</th>
                                                        <th scope="col">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card" id="projectcreatecard" style="display: none;">

                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-lg-6">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="text-center pull-left" id="url">
                                    Project Creation
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form id="projectcreateform">
                            <div class="row">
                                <div class="col-md-6 col-sm-12 col-lg-6">
                                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                        <div class="form-group">
                                            <label for="reponame">Repo</label>
                                            <input type="text" class="form-control" id="reponame" name="REPO"
                                                placeholder="Enter Repo">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                        <div class="form-group">
                                            <label for="username">Username</label>
                                            <input type="text" class="form-control" id="username" name="USER"
                                                placeholder="Enter username">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                        <div class="form-group">
                                            <label for="password">Accesstoken</label>
                                            <input type="text" class="form-control" id="password" name="PASS"
                                                placeholder="Enter Accesstoken">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                        <button type="button" id="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                </div>
                            </div>
                    </div>
                    </form>
                </div>
        </div>
    </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.8/ace.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/jstree.min.js"
        integrity="sha512-TGClBy3S4qrWJtzel4qMtXsmM0Y9cap6QwRm3zo1MpVjvIURa90YYz5weeh6nvDGKZf/x3hrl1zzHW/uygftKg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
    <script type="text/javascript">
        var token = localStorage.getItem('token');
        check();
        function check() {
            $.ajax({
                url: 'token',
                type: 'get',
                headers: {
                    authorization: token
                },
                success: function (data) {
                    if (data.data != null) {
                        $.ajax({
                            url: 'getname',
                            type: 'get',
                            headers: {
                                authorization: token
                            },
                            success: function (data) {
                                $('#Adminname').empty()
                                $('#Adminname').append(data.orgname)
                            }
                        })
                        orgRetrive();
                    }
                    else {
                        window.location.href = '/login'
                    }
                }
            });
        }
        $("#logout").on('click', function () {
            localStorage.clear()
        })
        $("#create").on('click', function () {
            check();
            $('#projectcreatecard').show();
            $('#repotablecard').hide();
        })
        $(document).ready(function () {
            orgRetrive();
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
        $('#submit').on('click', function () {
            var form_data = $("#projectcreateform").serializeArray();
            console.log(form_data);
            $.ajaxSetup({
                beforeSend: function (xhr, settings) {
                    if (!/^(GET|HEAD|OPTIONS|TRACE)$/i.test(settings.type) && !this.crossDomain) {
                        xhr.setRequestHeader("X-CSRFToken", form_data._csrf)
                    }
                }
            });
            baseurls = "clone2"
            $.ajax({
                url: baseurls,
                type: 'post',
                headers: {
                    authorization: token
                },
                dataType: 'json',
                data: form_data,
                beforeSend: function () {
                    $('#loader').show();
                },
                complete: function () {
                    $('#loader').hide();
                },
                success: function (data) {
                    if (data.status != null) {
                        if (data.status.status == "ok") {
                            alert(data.status.message)
                            $('#projectcreatecard').hide();
                            $('#repotablecard').show();
                            orgRetrive();
                        }
                        else {
                            alert('hii')
                            alert(data.status.message)

                        }
                    }
                    else {
                        window.location.href = '/login'
                    }
                }
            });
        })
        function orgRetrive() {
            $.ajaxSetup({
                beforeSend: function (xhr, settings) {
                    if (!/^(GET|HEAD|OPTIONS|TRACE)$/i.test(settings.type) && !this.crossDomain) {
                        xhr.setRequestHeader("X-CSRFToken", csrftoken)
                    }
                }
            });
            var ses = "SPADMIN";
            $('#repotbl').DataTable({
                "serverSide": false,
                "fixedheader": true,
                "language": {
                    search: "_INPUT_",
                    searchPlaceholder: "Search Here ..",
                    processing: '<i class="fa fa-spinner fa-pulse " ></i>'
                },
                "destroy": true,
                "searching": true,
                "ordering": true,
                "scrollX": true,
                "processing": true,
                "ajax": {
                    "url": "orgrepotable",
                    "type": 'GET',
                    "headers": { authorization: token },
                    dataSrc: function (json) {
                        if (json.data != null) {
                            $('#repotbl').show();
                            if (json.status == "pass") {

                                return json.data;
                            }
                            else {
                                return [];

                            }
                        }
                        else {
                            window.location.href = '/login';
                        }
                    },
                    "xhrFields": {
                        "withCredentials": true
                    },
                },
                "columns": [
                    {
                        "data": 'id'
                    },
                    {
                        "data": "reponame"
                    },
                    {
                        "data": "createdby"
                    },
                    {
                        "data": "Action"
                    }
                ],
                'columnDefs': [
                    {
                        'targets': [0],
                        'visible': false,

                    },
                    {
                        'targets': [-1],
                        'render': function () {
                            if (ses != '') {
                                if (ses == "SPADMIN") {
                                    return '<i><select name="values" id="ope"><option value="">Select</option><option value="editor">View project</option><option value="user">View users</option></select></i>'
                                }

                            }
                            else {
                                return table.columns([-1]).visible(false);
                            }
                        }

                    }],
                "fnCreatedRow": function (nRow, aData, iDataIndex) {
                    $(nRow).children("td").css("overflow", "hidden");


                    $(nRow).children("td").css("white-space", "nowrap");
                    $(nRow).children("td").css("text-overflow", "ellipsis");
                },
            });
            $('#repotable').wrap('<div class="dataTables_scroll" />');
        }
        function unssignretrive(repoid) {
            $.ajaxSetup({
                beforeSend: function (xhr, settings) {
                    if (!/^(GET|HEAD|OPTIONS|TRACE)$/i.test(settings.type) && !this.crossDomain) {
                        xhr.setRequestHeader("X-CSRFToken", csrftoken)
                    }
                }
            });
            var ses = "SPADMIN";
            $('#repounasstbl').DataTable({
                "serverSide": false,
                "fixedheader": true,
                "language": {
                    search: "_INPUT_",
                    searchPlaceholder: "Search Here ..",
                    processing: '<i class="fa fa-spinner fa-pulse " ></i>'
                },
                "destroy": true,
                "searching": true,
                "ordering": true,
                "scrollX": true,
                "processing": true,
                "ajax": {
                    "url": "repounasstbl/"+repoid,
                    "type": 'GET',
                    "headers": { authorization: token },
                    dataSrc: function (json) {
                        if (json.data != null) {
                            $('#repounasstbl').show();
                            if (json.status == "pass") {

                                return json.data;
                            }
                            else {
                                return [];
                            }
                        }
                        else {
                            window.location.href = '/login';
                        }
                    },
                    "xhrFields": {
                        "withCredentials": true
                    },
                },
                "columns": [
                    {
                        "data": 'id'
                    },
                    {
                        "data": "Name"
                    },
                    {
                        "data": "Action"
                    }
                ],
                'columnDefs': [
                    {
                        'targets': [0],
                        'visible': false,

                    },
                    {
                        'targets': [-1],
                        'render': function () {
                            if (ses != '') {
                                if (ses == "SPADMIN") {
                                    return '<i><button class="btn btn-primary" style="font-size:11px" id="add">Add</button></i>'
                                }

                            }
                            else {
                                return table.columns([-1]).visible(false);
                            }
                        }

                    }],
                "fnCreatedRow": function (nRow, aData, iDataIndex) {
                    $(nRow).children("td").css("overflow", "hidden");


                    $(nRow).children("td").css("white-space", "nowrap");
                    $(nRow).children("td").css("text-overflow", "ellipsis");
                },
            });
            $('#repounasstable').wrap('<div class="dataTables_scroll" />');
        }
        function assignretrive(id) {
            $.ajaxSetup({
                beforeSend: function (xhr, settings) {
                    if (!/^(GET|HEAD|OPTIONS|TRACE)$/i.test(settings.type) && !this.crossDomain) {
                        xhr.setRequestHeader("X-CSRFToken", csrftoken)
                    }
                }
            });
            var ses = "SPADMIN";
            $('#repoasstbl').DataTable({
                "serverSide": false,
                "fixedheader": true,
                "language": {
                    search: "_INPUT_",
                    searchPlaceholder: "Search Here ..",
                    processing: '<i class="fa fa-spinner fa-pulse " ></i>'
                },
                "destroy": true,
                "searching": true,
                "ordering": true,
                "scrollX": true,
                "processing": true,
                "ajax": {
                    "url": "repoasstbl/" + id,
                    "type": 'GET',
                    "headers": { authorization: token },
                    dataSrc: function (json) {
                        if (json.data != null) {
                            $('#repoasstbl').show();
                            if (json.status == "pass") {

                                return json.data;
                            }
                            else {
                                return [];

                            }
                        }
                        else {
                            window.location.href = '/login';
                        }
                    },
                    "xhrFields": {
                        "withCredentials": true
                    },
                },
                "columns": [
                    {
                        "data": 'userid'
                    },
                    {
                        "data": "username"
                    },
                    {
                        "data": "Action"
                    }
                ],
                'columnDefs': [
                    {
                        'targets': [0],
                        'visible': false,

                    },
                    {
                        'targets': [-1],
                        'render': function () {
                            if (ses != '') {
                                if (ses == "SPADMIN") {
                                    return '<i><button class="btn btn-primary" style="font-size:11px" id="delete">Delete</button></i>'
                                }

                            }
                            else {
                                return table.columns([-1]).visible(false);
                            }
                        }

                    }],
                "fnCreatedRow": function (nRow, aData, iDataIndex) {
                    $(nRow).children("td").css("overflow", "hidden");


                    $(nRow).children("td").css("white-space", "nowrap");
                    $(nRow).children("td").css("text-overflow", "ellipsis");
                },
            });
            $('#repoasstable').wrap('<div class="dataTables_scroll" />');
        }
        $(document.body).on("change", "#ope", function () {
            var vl = $(this).val();
            if (vl == "user") {
                $('#assigntablecard').show();
                $('#projectcreatecard').hide();
                $('#repotablecard').hide();
                $('#loader').hide();
                var tr = $(this).closest('tr');
                var data_task = $('#repotbl').DataTable().row(tr).data();
                var id = data_task['id'];
                $('#assigntablecard').val(id);
                unssignretrive(id);
                assignretrive(id);
            }
            if (vl == "editor") {
                $('#editorcard').show();
                $('#assigntablecard').hide();
                $('#projectcreatecard').hide();
                $('#repotablecard').hide();
                $('#loader').hide();
                var tr = $(this).closest('tr');
                var data_task = $('#repotbl').DataTable().row(tr).data();
                var id = data_task['id'];
                $('#file').jstree({
                    "plugins": ["types", 'themes', "html_data", "dnd"],
                    "types": {
                        "default": {
                            "icon": "fa fa-folder text-warning"
                        },
                        "file": {
                            "icon": "fa fa-file greencolor"
                        }
                    },
                    'core': {
                        "check_callback": true,
                        'themes': {
                            'dots': false,
                            'icons': true,
                            "responsive": false
                        },
                        'data': {
                            'url': "tree1/"+id,
                            'type': 'GET',
                            'dataType': 'JSON',
                            'contentType': 'application/json',
                            'data': function (data) {
                                return { data };
                            },
                        }
                    }
                });
                var editor = ace.edit("editor");
                editor.setTheme("ace/theme/terminal");
                $('#file').on("select_node.jstree", function (e, data) {
                    str = data.node.id
                    ext = data.node.text
                    var test = ext.match(/(.+)\.(.+)/);
                    str = str.replace(/[\/\\]/g, '^');
                    if (test[2] != "") {
                        editor.getSession().setMode("ace/mode/" + test[2]);
                        console.log("ace/mode/" + test[2])
                    }
                    else {
                        editor.getSession().setMode("ace/mode/python");
                    }
                    $.ajax({
                        type: 'GET',
                        url: 'fileread/' + str,
                        success: function (data) {
                            console.log('success');
                            editor.setValue(data)
                        }
                    });
                });
            }
        });
        $(document.body).on("click", "#delete", function () {
            var form_data = $("#projectcreateform").serializeArray();
            var tr = $(this).closest('tr');
            var data_task = $('#repoasstbl').DataTable().row(tr).data();
            var id = data_task['userid'];
            console.log(id)
            var username = data_task['username'];
            var repoid = $('#assigntablecard').val();
            console.log(repoid)
            $.ajaxSetup({
                beforeSend: function (xhr, settings) {
                    if (!/^(GET|HEAD|OPTIONS|TRACE)$/i.test(settings.type) && !this.crossDomain) {
                        xhr.setRequestHeader("X-CSRFToken", form_data._csrf)
                    }
                }
            });
            baseurls = "deleteassing/" + repoid + "/" + id
            $.ajax({
                url: baseurls,
                type: 'delete',
                headers: {
                    authorization: token
                },
                success: function (data) {
                    if (data.data != null) {
                        unssignretrive(repoid);
                        assignretrive(repoid);
                    }
                    else {
                        alert(data.status.message)

                    }
                }
            });
        });
        $(document.body).on("click", "#add", function () {
            var form_data = $("#projectcreateform").serializeArray();
            var tr = $(this).closest('tr');
            var data_task = $('#repounasstbl').DataTable().row(tr).data();
            var id = data_task['id'];
            var username = data_task['Name'];
            var repoid = $('#assigntablecard').val();
            console.log(repoid)
            $.ajaxSetup({
                beforeSend: function (xhr, settings) {
                    if (!/^(GET|HEAD|OPTIONS|TRACE)$/i.test(settings.type) && !this.crossDomain) {
                        xhr.setRequestHeader("X-CSRFToken", form_data._csrf)
                    }
                }
            });
            baseurls = "adassing"
            $.ajax({
                url: baseurls,
                type: 'post',
                headers: {
                    authorization: token
                },
                dataType: 'json',
                data: { 'userid': id, 'repoid': repoid, 'username': username },
                success: function (data) {
                    if (data.data != null) {
                        unssignretrive(repoid);
                        assignretrive(repoid);
                    }
                    else {
                        alert(data.status.message)

                    }
                }
            });
        });
    </script>
</body>

